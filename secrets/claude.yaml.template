# Claude Code MCP API Keys
# Copy this to claude.yaml and fill in your actual values
# Then encrypt with: sops -e -i secrets/claude.yaml

# GitHub MCP - Generate at https://github.com/settings/tokens
GITHUB_PERSONAL_ACCESS_TOKEN: your-github-token-here

# Home Assistant MCP
HASS_HOST: http://homeassistant.local:8123
HASS_TOKEN: your-ha-long-lived-access-token-here

# Obsidian MCP (REST API) - requires Local REST API plugin
# Install plugin: https://github.com/coddingtonbear/obsidian-local-rest-api
OBSIDIAN_API_KEY: your-obsidian-api-key-here
OBSIDIAN_HOST: 127.0.0.1
OBSIDIAN_PORT: "27123"
